{
  "version": 2,
  "name": "ori-homework-artsy",
  "alias": "ori-homework-artsy.andykenward.com",
  "scope": "andykenward",
  "regions": ["lhr1"],
  "build": {
    "env": {
      "REACT_APP_API": "@react_app_api",
      "SCHEMA_PATH": "@schema_path",
      "CI": "@ci"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" },
      "dest": "/index.html"
    }
  ]
}

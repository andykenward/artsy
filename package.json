{
  "name": "ori-frontend-engineer",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^10.15.3",
    "yarn": "^1.16.0"
  },
  "dependencies": {
    "@apollo/react-hooks": "0.1.0-beta.11",
    "@artsy/palette": "4.14.35",
    "@reach/router": "1.2.1",
    "@types/graphql": "14.2.2",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.8",
    "@types/ramda": "0.26.16",
    "@types/reach__router": "1.2.4",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/styled-components": "4.1.18",
    "apollo-boost": "0.4.3",
    "decamelize": "3.2.0",
    "graphql": "14.4.2",
    "graphql-tag": "2.10.1",
    "query-string": "6.8.1",
    "ramda": "0.26.1",
    "react": "^16.8.6",
    "react-apollo": "2.5.8",
    "react-dom": "^16.8.6",
    "react-error-boundary": "1.2.5",
    "react-scripts": "3.0.1",
    "styled-components": "4.3.2",
    "ts-optchain": "0.1.7",
    "typescript": "3.5.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "format": "prettier --write 'src/**/*.{css,js,jsx,ts,tsx}'",
    "lint": "eslint --ext .js,.ts,.tsx  src",
    "sync-schema": "curl https://raw.githubusercontent.com/artsy/metaphysics/master/_schemaV2.graphql -o data/schema.graphql; yarn prettier --write --parser graphql data/schema.graphql",
    "codegen": "graphql-codegen -r dotenv/config --config codegen.yml",
    "codegen:watch": "yarn codegen --watch",
    "now-build": "yarn run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "0.1.0-beta.6",
    "@graphql-codegen/cli": "1.4.0",
    "@graphql-codegen/fragment-matcher": "1.4.0",
    "@graphql-codegen/introspection": "1.4.0",
    "@graphql-codegen/typescript": "1.4.0",
    "@graphql-codegen/typescript-operations": "1.4.0",
    "@graphql-codegen/typescript-react-apollo": "1.4.0",
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "8.0.5",
    "dotenv": "8.0.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "jest-styled-components": "6.3.3",
    "prettier": "1.18.2"
  }
}

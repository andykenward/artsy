{
  "name": "artsy",
  "version": "0.1.0",
  "author": "Andy Kenward <hello@andykenward.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andykenward/artsy/issues"
  },
  "engines": {
    "node": "^10.x",
    "npm": "^6.10.1"
  },
  "dependencies": {
    "@apollo/react-hooks": "3.1.3",
    "@artsy/palette": "5.1.13",
    "@reach/router": "1.2.1",
    "@types/graphql": "14.5.0",
    "@types/jest": "24.0.25",
    "@types/node": "10.17.13",
    "@types/ramda": "0.26.39",
    "@types/reach__router": "1.2.6",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/styled-components": "4.4.2",
    "apollo-boost": "0.4.7",
    "decamelize": "3.2.0",
    "graphql": "14.5.8",
    "graphql-tag": "2.10.1",
    "query-string": "6.10.1",
    "ramda": "0.26.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-error-boundary": "1.2.5",
    "react-scripts": "3.3.0",
    "styled-components": "4.4.1",
    "typescript": "3.7.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "npm run codegen",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "format": "prettier --write 'src/**/*.{css,js,jsx,ts,tsx}'",
    "lint": "eslint --ext .js,.ts,.tsx  src",
    "sync-schema": "curl https://raw.githubusercontent.com/artsy/metaphysics/master/_schemaV2.graphql -o data/schema.graphql; prettier --write --parser graphql data/schema.graphql",
    "codegen": "graphql-codegen -r dotenv/config --config codegen.yml",
    "codegen:watch": "npm run codegen -- --watch",
    "now-build": "npm run build",
    "ci": "npm run codegen && npm run type-check && npm run lint && CI=true npm test "
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "3.1.3",
    "@graphql-codegen/cli": "1.11.2",
    "@graphql-codegen/fragment-matcher": "1.11.2",
    "@graphql-codegen/introspection": "1.11.2",
    "@graphql-codegen/typescript": "1.11.2",
    "@graphql-codegen/typescript-operations": "1.11.2",
    "@graphql-codegen/typescript-react-apollo": "1.11.2",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@types/testing-library__dom": "6.11.1",
    "@types/testing-library__react": "9.1.2",
    "dotenv": "8.2.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "jest-styled-components": "6.3.4",
    "prettier": "1.19.1"
  }
}

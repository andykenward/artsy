{
  "name": "ori-frontend-engineer",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^10.16.0",
    "npm": "^6.10.1",
    "yarn": "^1.17.0"
  },
  "dependencies": {
    "@types/graphql": "14.2.2",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.8",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "apollo-boost": "0.4.3",
    "graphql": "14.4.2",
    "graphql-tag": "2.10.1",
    "react": "^16.8.6",
    "react-apollo": "2.5.8",
    "react-apollo-hooks": "0.5.0",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typescript": "3.5.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "format": "prettier --write 'src/**/*.{css,js,jsx,ts,tsx}'",
    "lint": "eslint --cache --ext .js,.ts,.tsx  src",
    "sync-schema": "curl https://raw.githubusercontent.com/artsy/metaphysics/master/_schemaV2.graphql -o data/schemaV2.graphql; yarn prettier --write --parser graphql data/schemaV2.graphql",
    "codegen": "graphql-codegen -r dotenv/config --config codegen.yml",
    "codegen:watch": "yarn codegen --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.4.0",
    "@graphql-codegen/introspection": "1.4.0",
    "@graphql-codegen/typescript": "1.4.0",
    "@graphql-codegen/typescript-operations": "1.4.0",
    "@graphql-codegen/typescript-react-apollo": "1.4.0",
    "dotenv": "8.0.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "prettier": "1.18.2"
  }
}
